<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.LogInController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#returnToStartup" prefHeight="41.0" prefWidth="55.0" text="Return">
                     <HBox.margin>
                        <Insets right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="750.0" prefWidth="1200.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="363.0" prefWidth="300.0" style="-fx-background-color: #C0C0C0;">
                     <VBox.margin>
                        <Insets left="400.0" right="400.0" />
                     </VBox.margin>
                     <children>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign in">
                           <font>
                              <Font size="36.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="20.0" top="20.0" />
                           </VBox.margin>
                        </Text>
                        <TextField fx:id="inputUsername" prefWidth="455.0" promptText="Username">
                           <VBox.margin>
                              <Insets bottom="10.0" left="50.0" right="50.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <PasswordField fx:id="inputPassword" promptText="Password">
                           <VBox.margin>
                              <Insets bottom="10.0" left="50.0" right="50.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </PasswordField>
                        <Button contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#login" prefHeight="30.0" prefWidth="134.0" text="Login" textAlignment="CENTER">
                           <font>
                              <Font size="14.0" />
                           </font></Button>
                        <Text fx:id="errorMessage" fill="#ff6d6d" strokeType="OUTSIDE" strokeWidth="0.0" text="Invalid username or password">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
