<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.ProductionController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="113.0" prefWidth="1200.0">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#returnToSearch" prefHeight="41.0" prefWidth="55.0" text="Return">
                     <HBox.margin>
                        <Insets right="5.0" top="5.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
            <Text fx:id="productionTitle" strokeType="OUTSIDE" strokeWidth="0.0" text="[Title]" textAlignment="CENTER">
               <font>
                  <Font size="36.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Text>
            <VBox prefHeight="228.0" prefWidth="1100.0">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </VBox.margin>
               <children>
                  <HBox prefHeight="146.0" prefWidth="1100.0">
                     <children>
                        <ListView fx:id="attributesList" prefHeight="53.0" prefWidth="301.0">
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </ListView>
                        <VBox prefHeight="100.0" prefWidth="232.0">
                           <children>
                              <TextField editable="false" text="Genre" />
                              <ListView fx:id="genreList" prefHeight="200.0" prefWidth="163.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <TableView fx:id="castMembers" editable="true" minHeight="200.0" prefHeight="551.0" prefWidth="1100.0">
               <VBox.margin>
                  <Insets left="50.0" right="50.0" />
               </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="roleColumn" editable="false" onEditCommit="#commitJobTitleChange" prefWidth="75.0" text="Role" />
                  <TableColumn fx:id="nameColumn" editable="false" onEditCommit="#commitNameChange" prefWidth="75.0" text="Name" />
               </columns>
            </TableView>
            <HBox prefHeight="25.0" prefWidth="648.0">
               <children>
                  <Button fx:id="addEntry" mnemonicParsing="false" onMouseClicked="#addEntry" text="Add entry" visible="false">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="deleteEntry" mnemonicParsing="false" onMouseClicked="#deleteEntry" text="Delete entry" visible="false">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets left="50.0" />
               </padding>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="saveEntry" mnemonicParsing="false" onMouseClicked="#saveChanges" text="Save changes " visible="false">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
